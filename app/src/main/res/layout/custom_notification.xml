<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/notifnameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:text="Példa zene"/>

        <TextView
            android:id="@+id/notifalbumTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#808080"
            android:text="Példa album"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/notifprevIB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_skip_previous_grey600_48dp" />

    <!-- <ToggleButton
        android:id="@+id/playPauseButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/ic_play_pause"
        android:textOn=""
        android:textOff=""
        android:layout_gravity="center_vertical"/> -->

    <ImageButton
        android:id="@+id/notifpauseIB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_pause_grey600_48dp" />

    <ImageButton
        android:id="@+id/notifnextIB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_skip_next_grey600_48dp"
        />

    <ImageButton
        android:id="@+id/notifkillIB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/ic_close_grey600_48dp"
        />

</LinearLayout>